- @messages.each do |message|
  %ul.messages__chat__message
    %li.messages__chat__message__name
      = message.user.name
    %li.messages__chat__message__time
      = message.created_at
    %li.messages__chat__message__text
      = message.text if message.text
    %li.messages__chat__message__image
      = image_tag message.image if message.image
