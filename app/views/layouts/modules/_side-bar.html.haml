.head
  .group
    %h3.group__name
      = current_user.name
    %ul.group__icon
      %li.group__icon__edit
        = link_to new_group_path,method: :get do
          %i.fa.fa-edit
      %li.group__icon__cog
        = link_to edit_user_path(current_user), method: :get do
          %i.fa.fa-cog
.body
  - if current_user.groups
    - current_user.groups.each do |group|
      %ul.lists
        %li.name
          = link_to group_messages_path(group), method: :get do
            = group.name
        %li.say
          = group.messages.pluck(:text).last if group.messages.pluck(:text).last
          %br
          = "画像が投稿されています" if group.messages.pluck(:image).last

